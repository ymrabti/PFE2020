@model IEnumerable<GestionnaireUtilisateurs.Models.AspNetUserRoles>

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>

<h4>@ViewBag.Email</h4>
<hr />
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })


    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AspNetRoles.SousModule.Module.ModuleName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AspNetRoles.SousModule.SousModuleName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AspNetRoles.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Read)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Create)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Update)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Delete)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {

            <tr>
                <td>
                    @Html.Hidden("UserId",item.UserId)
                    @Html.Hidden("RoleId", item.RoleId)
                    @Html.DisplayFor(modelItem => item.AspNetRoles.SousModule.Module.ModuleName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AspNetRoles.SousModule.SousModuleName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AspNetRoles.Name)
                </td>
                <td>
                    @Html.EditorFor(modelItem => item.Read ,"Read",new { Name="Read_"+item.AspNetRoles.Id})
                </td>
                <td>
                    @Html.EditorFor(modelItem => item.Create,"Create")
                </td>
                <td>
                    @Html.EditorFor(modelItem => item.Update,"Update")
                </td>
                <td>
                    @Html.EditorFor(modelItem => item.Delete,"Delete")
                </td>
            </tr>
        }

    </table>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
