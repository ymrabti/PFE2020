@model GestionnaireUtilisateurs.Models.MultiModeles
<div class="modal fade" id="BackdropAddSubModule" tabindex="-1" role="dialog" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="staticBackdropLabel">Ajouter un sous module</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                @using (Html.BeginForm("UserTacheAddSousModule", "Home", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    <div class="form-group">
                        <label for="name">Nom du sous module</label>
                        <input type="text" name="SousModuleName" class="form-control">
                    </div>
                    <div class="form-group">
                        <label for="name">Description du sous module</label>
                        <textarea name="SousModuleDescription" class="form-control"></textarea>
                    </div>

                    <div class="form-group">
                        <label for="name">Module</label>
                        <select class="form-control form-control-sm" name="ModuleId" id="iden">
                            <option value=-1>--- Sélectionner un module ---</option>
                            @foreach (var item in Model.modules)
                            {
                                <option value="@item.ModuleId">@item.ModuleName</option>
                            }
                        </select>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-sm" style="background-color:#09aacc ; color:white;"><i class=" fas fa-plus">  </i> &nbsp;&nbsp;&nbsp; Ajouter</button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts{



    <script type="text/javascript">

        $(document).ready(function () {
            $("#iden").chosen({
                disable_search: false,
                create_option: true,
                persistent_create_option: true,
                skip_no_results: true,
                placeholder_text_single: "-------- Indice --------",
                no_results_text: "Aucun résultat ne correspond"
            });
        });
    </script>

}