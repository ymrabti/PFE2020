@model GestionnaireUtilisateurs.Models.StatutsViewModel
<div class="modal fade" id="BackdropAddStatut" tabindex="-1" role="dialog" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="staticBackdropLabel">Ajouter un Statut</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    @Html.LabelFor(nm=>nm.StatutName)
                    @Html.TextBoxFor(m=>m.StatutName,new { @class="form-control"})
                </div>
                <div class="form-group">
                    @Html.LabelFor(nm => nm.StatutDescription)
                    @Html.TextAreaFor(parameter=>parameter.StatutDescription,new { @class="form-control"})
                </div>
            </div>
            <div class="modal-footer">

                <button id="ButtonSubmitStatutPUP" type="button" class="btn btn-sm" style="background-color:#09aacc ; color:white;"><i class=" fas fa-plus">  </i> &nbsp;&nbsp;&nbsp; Ajouter</button>
            </div>
        </div>
    </div>
</div>

