@using GestionnaireUtilisateurs.Models
@model LoginViewModel
@{
    ViewBag.Title = "Se connecter";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


<div class="row">
    <div class="col-md-6" style=" margin-left: auto; margin-right: auto;">
        <div class="card unnamedClass">
            <div class="card-body">
                <img src='~/documentation/img/aurs.png' style="width:15%;" /> <br />
                @if (User.Identity.IsAuthenticated)
                {
                    //Url.Action("AURsS","WorkflowDerogation");
                    <center><label class="text-warning">Vous n'avez pas le droit d'afficher ce contenue</label></center>
                    if (ViewBag.derogationUser)
                    {
                        { Response.Redirect("~/WorkflowDerogation/Encours", false); }
                    }
                    else { { Response.Redirect("~/Home/AURS", false); }}
                }
                else
                {
                    <section id="loginForm">
                        @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                        {
                            @Html.AntiForgeryToken()
                            <h4>Utilisez un compte local pour vous connecter.</h4>
                            <hr />
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="form-group" style="position:center">
                                @Html.LabelFor(m => m.UserName, new { @class = "col-md-12 control-label", @style = "margin-bottom:10px" })
                                @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", @style = "text-align:center" })
                                @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })
                            </div>


                            <div class="form-group">
                                @Html.LabelFor(m => m.Password, new { @class = "col-md-12 control-label", @style = "margin-bottom:10px" })
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control", @style = "text-align:center" })
                                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                            </div>


                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <div class="checkbox">
                                        @Html.CheckBoxFor(m => m.RememberMe)
                                        @Html.LabelFor(m => m.RememberMe)
                                    </div>
                                </div>
                            </div>



                            <div class="form-group">
                                <input type="submit" value="Se connecter" class="btn btn-sm" style="background-color:#09aacc ; color:white;" />
                                @*<button type="submit" class="btn btn-sm" style="background-color:#09aacc ; color:white;">
            <i class=" fas editor">  </i>&nbsp;&nbsp;&nbsp;     Se connecter
        </button>*@
                            </div>
                            @*<p>
                                    @Html.ActionLink("Inscrire comme nouvel utilisateur", "Register")
                                </p>
                                Activez ceci une fois que vous avez activé la confirmation du compte pour la fonctionnalité de réinitialisation du mot de passe
                                    <p>
                                        @Html.ActionLink("Vous avez oublié votre mot de passe ?", "ForgotPassword")
                                    </p>*@
                        }
                    </section>
                }

            </div>

        </div>
    </div>

</div>

<style>
    .classaa {
        text-align: center;
        margin-bottom: 10px
    }
</style>