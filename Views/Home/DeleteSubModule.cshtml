@model GestionnaireUtilisateurs.Models.MultiModeles
@{
    ViewBag.Title = "Suppression D'une sous Module";
    Layout = "~/Views/Shared/_LayoutDerogation.cshtml";
}

<div class="row">
    <div class="col-md-6" style=" margin-left: auto; margin-right: auto;">
        <div class="card unnamedClass">
            <div class="card-body">
                <h4> <span class="badge-dot badge-info"></span>  Suppression d'une modules</h4>
                <hr />
                <h3>Vous etes sur de supprimer le Sous Module <span class="text-info">@ViewBag.SousModuleName</span>  ? </h3><br />
                <h3>de Module <span class="text-info">@ViewBag.ModuleParent</span></h3>
                <div>
                    <hr />

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-actions no-color">
                            <input type="submit" value="Supprimer" class="btn btn-default btn-danger " /> |
                            @Html.ActionLink("Retour a la List", "sousmodule")
                        </div>
                    }
                    <center><label style="font-weight: bold"><u>Utilisations </u></label></center><br />
                    <label style="font-style:oblique">Roles</label>

                    <ul>
                        @foreach (var role in Model.aspNetRoles)
                        {
                            <li>@role.Name</li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

