@model GestionnaireUtilisateurs.Models.MultiModeles

@{
    ViewBag.Title = "Les Statuts";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="tab-content" style="text-align:left; background-color: white; width: 100%; padding-top:15px; box-shadow: 0 17px 41px -21px black;border-top:5px solid #09aacc">
    <div class="card-body">
        <div class="card-body border-top">
            <div class="row" style="width:100%">
                <a href="@Url.Action("AddStatut", "Home")" class="btn btn" style="background-color:#09aacc ; color:white;">
                    <i class="fa fa-plus"> Ajouter  </i>
                </a>
                @using (Html.BeginForm("EditStatut", "Home", FormMethod.Get))
                {
                    @Html.AntiForgeryToken()
                    <input type="hidden" id="IdHidden" name="id" value="-1">
                    <button disabled id="buttonModifie" type="submit" class="btn btn" style="background-color:#09aacc ; color:white;margin-left:10px;margin-right:10px;">
                        <i class="fa fa-edit"> Modifier  </i>
                    </button>
                }
                @using (Html.BeginForm("DeleteStatut", "Home", FormMethod.Get))
                {
                    @Html.AntiForgeryToken()
                    <input type="hidden" id="IdHidden2" name="id" value="-1">
                    <button disabled id="buttonDelete" type="submit" class="btn btn" style="background-color:#09aacc ; color:white;">
                        <i class="fa fa-trash"> Supprimer  </i>
                    </button>
                }
            </div>
            @using (Html.BeginForm("StatutTache", "Home", FormMethod.Get))
            {
                @Html.AntiForgeryToken()
                <input type="hidden" id="IdHidden3" name="id" value="-1">
                <button disabled id="ManagementSelected" type="submit" class="btn btn" style="background-color:#09aacc ; color:white; margin-left: 63%;">
                    <i class="fa fa-sliders-h"> Gestion des roles   </i>
                </button>
            }
        </div>
        <table data-tablesaw-mode="columntoggle" class="table table-bordered first" id="tableFilter">
            <thead>
                <tr>
                    <th scope="col" data-tablesaw-sortable-col data-tablesaw-priority="1" style="background-color:#d9edf7;">Nom de Statut</th>
                    <th scope="col" data-tablesaw-sortable-col data-tablesaw-priority="1" style="background-color:#d9edf7;">Description de Statut</th>
                    <th scope="col" data-tablesaw-sortable-col data-tablesaw-priority="1" style="background-color:#d9edf7;">Autorisations</th>

                </tr>

            </thead>
            <tbody id="tabletargetted">
                @foreach (var item in Model.statuts)
                {
                    <tr id="@item.StatutId">
                        <td>
                            @Html.DisplayFor(modelItem => item.StatutName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.StatutDescription)
                        </td>
                        <td>
                            <ul>
                                @foreach (var ele in item.StatutRole)
                                {
                                    <li>@ele.AspNetRoles.Name</li>
                                }
                            </ul>
                        </td>
                    </tr>
                }
            </tbody>


        </table>

    </div>
</div>



@section Scripts{
    <script src="~/Content/TableFilter/ReapetedFilter.js"></script>
}

