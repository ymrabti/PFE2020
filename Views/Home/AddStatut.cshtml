
@{
    ViewBag.Title = "Ajout d'une Statut";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row">
    <div class="col-md-6" style=" margin-left: auto; margin-right: auto;">
        <div class="card" style="text-align:center; background-color: white; width: 100%; padding-top:15px;box-shadow: 0 17px 41px -21px black;border-top:5px solid #09aacc">
            <div class="card-body">

                <h4> <span class="badge-dot badge-info"></span>   Ajout d'une Statut</h4>
                <hr />
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <div class="form-horizontal">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                            <label for="name" class="col-md-12 control-label" style="font:bold">Nom Du Statut</label>
                            <div class="col-md-10">
                                <input class="form-control" name="StatutName" type="text" />
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="name" class="col-md-12 control-label" style="font:bold">Description Du Statut</label>
                            <div class="col-md-10">
                                <textarea class="form-control" name="StatutDescription"></textarea>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">

                                <div class="modal-footer">

                                    <button type="submit" class="btn btn-sm" style="background-color:#09aacc ; color:white;"><i class=" fas fa-plus">  </i> &nbsp;&nbsp;&nbsp; Ajouter</button>
                                </div>
                            </div>
                        </div>
                    </div>
                }

                <div>
                    @Html.ActionLink("Back to List", "IndexStatut")
                </div>

            </div>
        </div>
    </div>
</div>
