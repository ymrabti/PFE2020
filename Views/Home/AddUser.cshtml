
@{
    ViewBag.Title = "Créer un compte d'utilisateur";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="dashboard-main-wrapper" style="font-family: 'Catamaran', sans-serif; font-size:15px;background-color:#e9e9e9">
    

    <div class="dashboard-wrapper">
        <div class="dashboard-finance">
            <div class="container-fluid dashboard-content">
                <div class="row">
                    <div class="col-lg-12" style=" margin-left: auto; margin-right: auto;">
                        <div class="tab-content" style="text-align:left; background-color: white; width: 100%; padding-top:15px; box-shadow: 0 17px 41px -21px black;border-top:5px solid #09aacc">
                            <div class="card-body">
                                <form action="@Url.Action("Index", "Home")" method="post">
                                    <div class="card-body">

                                        <h4> <span class="badge-dot badge-info"></span>   Créer un compte d'utilisateur</h4>
                                        <hr />
                                    </div>
                                    <div class="form-group">
                                        <label for="inputText12">Type d'utilisateur :</label>
                                        <br>
                                        <label class="custom-control custom-radio custom-control-inline">
                                            <input id="11" type="radio" name="typeUtilisateur" class="custom-control-input"><span class="custom-control-label">Morale</span>
                                        </label>
                                        <label class="custom-control custom-radio custom-control-inline">
                                            <input id="22" type="radio" name="typeUtilisateur" class="custom-control-input" checked=""><span class="custom-control-label">Physique</span>
                                        </label>
                                    </div>
                                    <div class="row">
                                        <div class="col-lg-6">
                                            <div class="form-group">
                                                <label for="name">Nom</label>
                                                <input id="nameNom" type="text" name="Nom" class="form-control">
                                            </div>
                                        </div>
                                        <div class="col-lg-6">
                                            <div class="form-group">
                                                <label for="name">Prenom</label>
                                                <input id="namePrenom" type="text" name="Prenom" class="form-control">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-lg-6">
                                            <div class="form-group">
                                                <label for="name" style="  margin-left: 89%">الاسم الشخصي</label>
                                                <input id="namePrenomAr" type="text" name="PrenomAr" class="form-control">
                                            </div>
                                        </div>
                                        <div class="col-lg-6">
                                            <div class="form-group">
                                                <label for="name" style="  margin-left: 91%">الاسم العائلي</label>
                                                <input id="nameNomAr" type="text" name="NomAr" class="form-control">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-lg-6">
                                            <div class="form-group">

                                                <label for="name">CIN</label>
                                                <input id="nameCIN" type="text" name="CIN" class="form-control">
                                            </div>
                                        </div>
                                        <div class="col-lg-6">
                                            <div class="form-group">

                                                <label for="name">Ville</label>
                                                <input id="nameVille" type="text" name="Ville" class="form-control">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-lg-6">
                                            <div class="form-group">
                                                <label for="inputText12">Sexe :</label>
                                                <br>
                                                <label class="custom-control custom-radio custom-control-inline">
                                                    <input type="radio" name="Sexe" class="custom-control-input" id="1Sexe"><span class="custom-control-label">Homme</span>
                                                </label>
                                                <label class="custom-control custom-radio custom-control-inline">
                                                    <input type="radio" name="Sexe" class="custom-control-input" id="2Sexe"><span class="custom-control-label">Femme</span>
                                                </label>
                                            </div>
                                        </div>
                                        <div class="col-lg-6">

                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-lg-6">
                                            <div class="form-group">

                                                <label for="name">Email</label>
                                                <input id="nameEmail" type="email" name="Email" class="form-control">
                                            </div>
                                        </div>
                                        <div class="col-lg-6">
                                            <div class="form-group">

                                                <label for="name">N°Telephone</label>
                                                <input id="namePhoneNumber" type="tel" name="PhoneNumber" class="form-control">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-lg-6">
                                            <div class="form-group">

                                                <label for="name">Mot de passe</label>
                                                <input id="name" type="password" name="name" class="form-control">
                                            </div>
                                        </div>
                                        <div class="col-lg-6">
                                            <div class="form-group">

                                                <label for="name">Confirmer mot de passe</label>
                                                <input id="name" type="password" name="name" class="form-control">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-lg-6">
                                            <div class="form-group">

                                                <label for="name">Statut</label>
                                                <select class="form-control form-control-sm">
                                                    <option value="">Statut</option>
                                                </select>
                                            </div>
                                        </div>
                                        <div class="col-lg-6">
                                            <div class="form-group">
                                                <br />

                                                <button type="button" class="btn btn-sm" style="background-color:#09aacc ; color:white;" data-toggle="modal" data-target="#staticBackdrop"><i class=" fas fa-plus">  </i>    </button>




                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">

                                        <div class="col-lg-6">
                                            <div class="form-group">

                                                <a href="@Url.Action("Index", "Home")">Retour a la liste</a>
                                            </div>
                                        </div>
                                        <div class="col-lg-6" style="text-align: right;">
                                            <div class="form-group">

                                                <button type="submit" class="btn btn-sm" style="background-color:#09aacc ; color:white;">
                                                    <i class=" fas fa-user-plus">  </i>&nbsp;&nbsp;&nbsp;     Créer un compte
                                                </button>

                                            </div>
                                        </div>
                                    </div>

                                </form>

                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
    <div class="modal fade" id="staticBackdrop" data-backdrop="static" tabindex="-1" role="dialog" aria-labelledby="staticBackdropLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="staticBackdropLabel">Ajouter un Statut</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-group">


                        <input id="name" type="text" name="name" class="form-control">
                    </div>
                </div>
                <div class="modal-footer">

                    <button type="button" class="btn btn-sm" style="background-color:#09aacc ; color:white;"><i class=" fas fa-plus">  </i> &nbsp;&nbsp;&nbsp; Ajouter</button>
                </div>
            </div>
        </div>
    </div>

</div>