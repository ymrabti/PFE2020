@model GestionnaireUtilisateurs.Models.MultiModeles
@{
    ViewBag.Title = "Suppression d'une Statut";
    Layout = "~/Views/Shared/_LayoutDerogation.cshtml";
}

<div class="row">
    <div class="col-md-6" style=" margin-left: auto; margin-right: auto;">
        <div class="card unnamedClass">
            <div class="card-body">
                <h4> <span class="badge-dot badge-info"></span>  Suppression définitif d'une statut</h4>
                <hr />
                <h3>Vous etes sur de supprimer définitivement <span class="text-info">@ViewBag.statutName</span> ?</h3>
                <div>
                    <hr />

                    @using (Html.BeginForm())
                    {
                        <div class="form-actions no-color">
                            <button type="submit" class="btn btn-default" style="background-color:indianred;color:white">

                                <img src="~/Content/documentation/img/del.png" /> supprimer
                            </button>  |
                            @Html.ActionLink("Back to List", "Statuts")
                        </div>
                    }
                </div>
            </div>
            <center><label style="font-weight: bold;font-style:oblique"><u>Utilisations </u></label></center><br />
            <br />
            @if (Model.aspNetUsers.Count() != 0)
            {
                <label style="font-style:oblique">les utilisateurs suivants seront supprimés définitivement</label>
                <ul>
                    @foreach (var user in Model.aspNetUsers)
                    {
                        if (user.AspNetUserRoles.Where(o => o.AspNetRoles.Name == "Administrator").Count() != 0)
                        {
                            <li><span style="color:red"> @user.Email </span></li>
                        }
                        else
                        {
                            <li>@user.Email </li>
                        }

                    }
                </ul>
            }
            else
            {
                <label style="color:forestgreen">AUCUN UTILISATION</label>
            }
        </div>
    </div>
</div>

