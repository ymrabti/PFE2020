@model GestionnaireUtilisateurs.Models.MultiModeles
@{
    ViewBag.Title = "Users";
    Layout = "~/Views/Shared/_LayoutDerogation.cshtml";
}

<style>
    .indexusers {
        text-align: left;
        background-color: white;
        width: 100%;
        padding-top: 15px;
        box-shadow: 0 17px 41px -21px black;
        border-top: 5px solid #09aacc
    }
</style>

<div class="tab-content indexusers" style="margin-bottom:10px">
    <div class="card-body">
        <div class="card-body border-top">
            <div class="row">
                <div class="col-sm-3">
                </div>
                <div class="col-sm-2">
                    @using (Html.BeginForm("RestoreUser", "Corbeille", FormMethod.Get))
                    {
                        <input type="hidden" id="IdHidden" name="id" value="-1">
                        <button disabled id="buttonModifie" type="submit" class="btn btn" style="background-color:#09aacc ; color:white;">
                            <i class="fa fa-edit"> Restaurer  </i>
                        </button>

                    }
                </div>
                <div class="col-sm-2">
                </div>
                <div class="col-sm-2">
                    @using (Html.BeginForm("DeleteUser", "Corbeille", FormMethod.Get))
                    {
                        <input type="hidden" id="IdHidden2" name="id" value="-1">
                        <button disabled id="buttonDelete" type="submit" class="btn btn" style="background-color:#09aacc ; color:white;">
                            <i class="fa fa-user-times"> Supprimer définitivement</i>
                        </button>
                    }
                </div>
                <div class="col-sm-3">
                </div>
            </div>
        </div>

        <table data-tablesaw-mode="columntoggle" class="table table-bordered first" id="tableFilter">
            <thead>
                <tr>
                    <th data-tablesaw-sortable-col data-tablesaw-priority="0" style="background-color:#d9edf7;">Nom</th>
                    <th data-tablesaw-sortable-col data-tablesaw-priority="0" style="background-color:#d9edf7;">Prenom</th>
                    <th data-tablesaw-sortable-col data-tablesaw-priority="1" style="background-color:#d9edf7;">Username</th>
                    <th data-tablesaw-sortable-col data-tablesaw-priority="0" style="background-color:#d9edf7;">Email</th>
                    <th data-tablesaw-sortable-col data-tablesaw-priority="1" style="background-color:#d9edf7;">Dernier Modification</th>
                    <th data-tablesaw-sortable-col data-tablesaw-priority="1" style="background-color:#d9edf7;">Par</th>
                </tr>
            </thead>
            <tbody id="tabletargetted">
                @foreach (var item in Model.aspNetUsers)
                {
                    <tr id="@item.Id">
                        <td>
                            @Html.DisplayFor(modelItem => item.Nom)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Prenom)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.UserName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            @if (item.HistoriqueUserDeletion1.Count() == 0)
                            {
                                <div>----------</div>
                            }
                            else
                            {
                                <div>@Html.DisplayFor(modelItem => item.HistoriqueUserDeletion1.OrderBy(i=>i.date_heure).Last().date_heure)</div>
                            }
                        </td>
                        <td>
                            @if (item.HistoriqueUserDeletion1.Count() == 0)
                            {
                                <div>----------</div>
                            }
                            else
                            {
                                <div>@Html.DisplayFor(modelItem => item.HistoriqueUserDeletion1.OrderBy(i=>i.date_heure).Last().AspNetUsers.Email)</div>
                            }
                        </td>
                    </tr>
                }
            </tbody>


        </table>

    </div>
</div>



