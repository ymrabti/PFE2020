@model GestionnaireUtilisateurs.Models.MultiModeles
@{
    ViewBag.Title = "Statuts";
    Layout = "~/Views/Shared/_LayoutDerogation.cshtml";
}

<div class="tab-content" style="text-align:left; background-color: white; width: 100%; padding-top:15px; box-shadow: 0 17px 41px -21px black;border-top:5px solid #09aacc">
    <div class="card-body">
        <div class="card-body border-top">
            <div class="row">
                <div class="col-sm-3">
                </div>
                <div class="col-sm-2">
                    @using (Html.BeginForm("RestoreStatut", "Corbeille", FormMethod.Get))
                    {
                        <input type="hidden" id="IdHidden" name="id" value="-1">
                        <button disabled id="buttonModifie" type="submit" class="btn btn" style="background-color:#09aacc ; color:white;">
                            <i class="fa fa-edit"> Restaurer  </i>
                        </button>
                    }
                </div>
                <div class="col-sm-2">
                </div>
                <div class="col-sm-2">
                    @using (Html.BeginForm("DeleteStatut", "Corbeille", FormMethod.Get))
                    {
                        <input type="hidden" id="IdHidden2" name="id" value="-1">
                        <button disabled id="buttonDelete" type="submit" class="btn btn" style="background-color:#09aacc ; color:white;">
                            <i class="fa fa-trash"> Supprimer définitivement </i>
                        </button>
                    }
                </div>
                <div class="col-sm-3">
                </div>
            </div>
        </div>
        <table data-tablesaw-mode="columntoggle" class="table table-bordered first" id="tableFilter">
            <thead>
                <tr>
                    <th data-tablesaw-sortable-col data-tablesaw-priority="1" style="background-color:#d9edf7;">Nom de Statut</th>
                    <th data-tablesaw-sortable-col data-tablesaw-priority="1" style="background-color:#d9edf7;">Description de Statut</th>
                    <th data-tablesaw-sortable-col data-tablesaw-priority="1" style="background-color:#d9edf7;">Autorisations</th>
                    <th data-tablesaw-sortable-col data-tablesaw-priority="1" style="background-color:#d9edf7;">Dernier Modification</th>
                    <th data-tablesaw-sortable-col data-tablesaw-priority="1" style="background-color:#d9edf7;">Par</th>

                </tr>

            </thead>
            <tbody id="tabletargetted">
                @foreach (var item in Model.statuts)
                {
                    <tr id="@item.StatutId">
                        <td>
                            @Html.DisplayFor(modelItem => item.StatutName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.StatutDescription)
                        </td>
                        <td>
                            <ul>
                                @foreach (var ele in item.StatutRole)
                                {
                                    <li>@ele.AspNetRoles.Name</li>
                                }
                            </ul>
                        </td>
                        <td>
                            @if (item.HistoireStatutDeletion.Count() == 0)
                            {
                                <div>----------</div>
                            }
                            else
                            {
                                <div>@Html.DisplayFor(modelItem => item.HistoireStatutDeletion.OrderBy(i => i.date_heure).Last().date_heure)</div>
                            }
                        </td>
                        <td>
                            @if (item.HistoireStatutDeletion.Count() == 0)
                            {
                                <div>----------</div>
                            }
                            else
                            {
                                <div>@Html.DisplayFor(modelItem => item.HistoireStatutDeletion.OrderBy(i => i.date_heure).Last().AspNetUsers.Email)</div>
                            }
                        </td>
                    </tr>
                }
            </tbody>


        </table>

    </div>
</div>



@section Scripts{
    <script src="~/Content/TableFilter/ReapetedFilter.js"></script>
}


