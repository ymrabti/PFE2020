
@{
    ViewBag.Title = "Restauration d'un utilisateur";
    Layout = "~/Views/Shared/_LayoutDerogation.cshtml";
}


<div class="row">
    <div class="col-md-6" style=" margin-left: auto; margin-right: auto;">
        <div class="card unnamedClass">
            <div class="card-body">
                <h4> <span class="badge-dot badge-info"></span>  Restauration d'un utilisateur</h4>
                <hr />
                <h3>Vous etes sur de Restaurer l'utilisateur <span class="text-info">@ViewBag.utilisateur</span> ?</h3><br />
                <h2>de statut <span class="text-info">@ViewBag.statutName</span></h2>
                <div>
                    <hr />

                    @using (Html.BeginForm())
                    {
                        <div class="form-actions no-color">
                            <button type="submit" class="btn btn-default" style="background-color:lawngreen;color:white">
                                <i class="fa fa-retweet"></i>Restaurer
                            </button> |
                            @Html.ActionLink("Back to List", "Users")
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

